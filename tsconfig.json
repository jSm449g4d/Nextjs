{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es2020",
      "target": "es2020",
      "jsx": "preserve",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"], 
    "exclude": ["node_modules"]
  }